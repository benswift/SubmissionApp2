<div class="row">
  <div class="col-md-9">
    <h1 class="page-header"><%= @assignment.name %></h1>
    <p class="bold">Submission Instructions</p>
    <p class="italic">Assignment for <%= link_to @course.code + ": " + @course.name,
      course_path(@course.id)%></p>
    <p>Due at <%= @assignment.due_date.strftime('%d/%m/%Y %I:%M%p') %></p>
    <p><%= @assignment.description %></p>

    <h3>Your submissions</h3>
    <table class="table table-hover table-striped">
      <% if @submissions.empty? %>
        <p>You currently have no submissions for this assignment.</p>
        <a href="/submissions/new/<%= @assignment.id.to_s %>">New submission</a>
      <% else %>
        <tr>
          <th>Submitted by</th>
          <th>Uni ID</th>
          <th>Date submitted</th>
        </tr>
        <% @submissions.each do |s| %>
          <tr>
            <td><%= s.user.full_name %></td>
            <td><%= s.user.uid %></td>
            <td><%= s.timestamp.strftime('%d/%m/%Y %I:%M%p') %></td>
          </tr>
        <% end %>
      <% end %>
    </table>

    <% if current_user.is_staff? %>
    <h3>All submissions</h3>
    <table class="table table-hover table-striped">
      <% if @assignment.submissions.empty? %>
        <p>No submissions found.</p>
      <% else %>
        <tr>
          <th>Submitted by</th>
          <th>Uni ID</th>
          <th>Date submitted</th>
        </tr>
        <% @submissions.each do |s| %>
          <tr>
            <td><%= s.user.full_name %></td>
            <td><%= s.user.uid %></td>
           <td><%= s.timestamp.strftime('%d/%m/%Y %I:%M%p') %></td>
          </tr>
        <% end %>
      <% end %>
    </table>
    <% end %>

  </div>
  <%= render 'sidebar_show' %>
</div>

